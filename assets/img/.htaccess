# Image Cache Control
<IfModule mod_headers.c>
    # Resimleri cache'le ama versiyonlamaya izin ver
    <FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
        # Cache kontrolü
        Header set Cache-Control "public, max-age=86400, must-revalidate"
        
        # ETag kullan (dosya değişince otomatik yenilenir)
        FileETag MTime Size
        
        # Vary header ile farklı versiyonları destekle
        Header append Vary "Accept-Encoding"
    </FilesMatch>
</IfModule>

# Güvenlik
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Sadece resim dosyalarına izin ver
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^.*$ - [F,L]
</IfModule>

